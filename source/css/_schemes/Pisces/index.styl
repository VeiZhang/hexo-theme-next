/** 动态背景图 **/
body::before {
    content: '';
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0px;
    left: 0px;
    background: url("/uploads/bg3.jpg");
	opacity: 0.35;
    background-size: auto 100%;
    -webkit-transform: translate3d(0, 0, 0);
	will-change:bg-move;
	animation:bg-move 50s linear 2s infinite alternate;
	-webkit-animation:bg-move 50s linear 2s infinite alternate;
	@media screen and (max-width: 767px) {
		background-size: auto !import;
	}
	@keyframes bg-move {
		from {
			background-position: 0 0;
		}
		to {
			background-position: 100% 0;
		}
	}
	
	@-webkit-keyframes bg-move {
		from {
			background-position: 0 0;
		}
		to {
			background-position: 100% 0;
		}
	}
}